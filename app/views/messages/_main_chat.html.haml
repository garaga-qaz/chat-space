.chat-main
  .chat-main__group-info
    .chat-main__group-info__group
      = @group.name
      %ul.chat-main__group-info__member
        Memberï¼š
        %li.chat-main__group-info__member__name
          - @group.users.each do |user|
            = user.name



    .chat-main__group-info__edit
      = link_to edit_group_path(@group), class: "edit" do
        Edit

  .chat-main__message-list
    = render @messages   
        

  .chat-main__message-form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__message-room
        = f.text_field :content, class: 'room_text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'input-box__imagefile'
      = f.submit 'Send', class: 'submit'
